<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jordan.ukelectionsapp.Fragments.LoginFragment"
    android:padding="10dp"
    android:layout_centerVertical="true"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Confirm that your chosen candidate is:" />

    <TextView
        android:id="@+id/chosenCandidate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Error Loading Candidate" />

    <Button
        android:id="@+id/deny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is NOT my chosen candidate" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This IS my chosenn candidate" />

</LinearLayout>
